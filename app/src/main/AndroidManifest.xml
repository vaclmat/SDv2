<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vaclmat.sdv2">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GetAllStudents_Activity"
            android:label="Get All Students">
        </activity>
        <activity android:name=".GetStudentByID_Activity"
            android:label="Get Student By ID">
        </activity>
        <activity android:name=".DeleteStudentByID_Activity"
            android:parentActivityName=".MainActivity"
            android:label="Delete Student By ID">
        </activity>
        <activity android:name=".AddStudent_Activity"
            android:label="Add New Student">
        </activity>
        <activity android:name=".AddStudent_result_Activity"
            android:parentActivityName=".MainActivity"
            android:label="Add New Student - result">
        </activity>
        <activity android:name=".ModifyStudentByID_Activity"
            android:label="Modify Student By ID">
        </activity>
        <activity android:name=".ModifyStudentByID_result_Activity"
            android:parentActivityName=".MainActivity"
            android:label="Modify Student By ID - result">
        </activity>
        <activity android:name=".StudentDetailsActivity"
            android:label="Student Details">
        </activity>
    </application>

</manifest>